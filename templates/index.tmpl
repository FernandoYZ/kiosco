<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kiosco Escolar</title>
    <link rel="stylesheet" href="/static/css/estilos.css">
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-gray-50">

    <!-- Contenedor Principal -->
    <div class="max-w-full mx-auto p-4 sm:p-6">

        <!-- Cabecera -->
        <header class="mb-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Control de Consumo</h1>
                    <p class="text-gray-600">Semana del {{ .FechaInicio.Day }} al {{ .FechaFin.Day }} de {{ nombreMes .FechaInicio.Month }}</p>
                </div>
                <div class="flex items-center gap-2">
                    <a href="/?fecha={{ .FechaInicio.AddDate 0 0 -7 | formatearFechaCompleta }}" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">Anterior</a>
                    <a href="/" class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700">Hoy</a>
                    <a href="/?fecha={{ .FechaInicio.AddDate 0 0 7 | formatearFechaCompleta }}" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">Siguiente</a>
                </div>
            </div>
        </header>

        <!-- Controles y Filtros -->
        <div class="mb-4">
            <!-- Pestañas de Grados -->
            <div class="border-b border-gray-200">
                <nav class="-mb-px flex space-x-4 overflow-x-auto" aria-label="Tabs">
                    {{ range .Grados }}
                        <a href="/?grado={{ .IdGrado }}&fecha={{ formatearFechaCompleta $.FechaInicio }}" 
                           class="whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm {{ if eq .IdGrado $.GradoSeleccionado }} border-indigo-500 text-indigo-600 {{ else }} border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 {{ end }}">
                            {{ .Nombre }}
                        </a>
                    {{ end }}
                </nav>
            </div>

            <!-- Toggle de Días Hábiles -->
            <div class="mt-4 p-3 bg-white rounded-lg border border-gray-200">
                 <div class="flex flex-wrap gap-x-6 gap-y-3 items-center">
                    <span class="text-sm font-medium text-gray-700">Días de la semana:</span>
                    {{ range .DiasConEstado }}
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="checkbox" class="dia-toggle h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 cursor-pointer" data-fecha="{{ formatearFechaCompleta .Fecha }}" {{ if .EsHabil }}checked{{ end }}>
                            <span class="text-sm {{ if .EsHabil }}text-gray-800{{ else }}text-gray-400 line-through{{ end }}">{{ formatearFecha .Fecha }}</span>
                        </label>
                    {{ end }}
                </div>
            </div>
        </div>

        <!-- Tabla de Consumos -->
        <div class="overflow-x-auto bg-white rounded-lg shadow-sm border border-gray-200">
            <table class="tabla-consumo min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="nombre-estudiante px-4 py-3 text-left text-xs font-medium bg-white text-gray-500 uppercase tracking-wider w-48">Estudiante</th>
                        {{ range .DiasHabiles }}
                            <th scope="col" class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-40">{{ formatearFecha . }}</th>
                        {{ end }}
                        <th scope="col" class="px-2 py-3 w-20 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">Subtotal</th>
                        <th scope="col" class="px-2 py-3 w-20 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">D Ante</th>
                        <th scope="col" class="px-2 py-3 w-20 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">Pagos</th>
                        <th scope="col" class="px-2 py-3 w-20 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">Total</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {{ range $i, $est := .EstudiantesConData }}
                        <tr class="{{ if mod $i 2 }} bg-white {{ else }} bg-gray-50 {{ end }}">
                            <td class="nombre-estudiante px-4 py-3 text-sm font-medium text-gray-800 w-48 {{ if mod $i 2 }} bg-white {{ else }} bg-gray-50 {{ end }}">
                                <div class="flex items-center justify-between gap-2">
                                    <div class="break-words leading-tight flex-1">
                                        {{ .Apellidos }}, {{ .Nombres }}
                                    </div>
                                    <a href="/ver-consumo-semanal?id_estudiante={{ .IdEstudiante }}&fecha={{ formatearFechaCompleta $.FechaInicio }}&grado={{ $.GradoSeleccionado }}"
                                       class="flex-shrink-0 p-1.5 text-indigo-600 hover:text-indigo-800 hover:bg-indigo-50 rounded-md transition-colors"
                                       title="Ver comprobante semanal">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                        </svg>
                                    </a>
                                </div>
                            </td>
                            
                            <!-- Consumos por día -->
                            {{ $estudiante := . }}
                            {{ range $.DiasHabiles }}
                                {{ $fecha := . }}
                                <td class="p-0 text-sm text-gray-500 w-42 align-top">
                                    <a href="/editar-consumos?id_estudiante={{ $estudiante.IdEstudiante }}&fecha={{ formatearFechaCompleta $fecha }}&grado={{ $.GradoSeleccionado }}"
                                       class="flex flex-col h-full min-h-[180px] p-1 rounded-sm hover:bg-indigo-50 transition-colors">
                                        {{ $consumosDia := index (index $.ConsumosPorDia $estudiante.IdEstudiante) ($fecha.Format "2006-01-02") }}
                                        {{ $totalDia := calcularTotalDia $.ConsumosPorDia $estudiante.IdEstudiante $fecha $.Productos }}

                                        <!-- Grid de productos (3 columnas) - más compacto -->
                                        <div class="grid grid-cols-3 gap-1 flex-grow">
                                            {{ if $consumosDia }}
                                                {{ range $idProducto, $cantidad := $consumosDia }}
                                                    {{ $producto := obtenerProducto $.Productos $idProducto }}
                                                    {{ if $producto }}
                                                    <div class="flex flex-col items-center bg-gray-50 rounded p-0.5 h-fit">
                                                        <span class="text-[9px] text-gray-700 font-medium break-words w-full text-center">{{ $producto.Nombre }}</span>
                                                        <span class="text-xs font-bold text-indigo-900">{{ $cantidad }}</span>
                                                    </div>
                                                    {{ end }}
                                                {{ end }}
                                            {{ end }}
                                        </div>

                                        <!-- Total siempre en la parte inferior -->
                                        <div class="mt-auto pt-1.5 border-t border-gray-200 flex-shrink-0">
                                            <div class="text-center">
                                                <span class="text-xs text-gray-500">Total:</span>
                                                <span class="ml-1 text-sm font-bold text-indigo-700">S/ {{ formatearMoneda $totalDia }}</span>
                                            </div>
                                        </div>
                                    </a>
                                </td>
                            {{ end }}

                            <!-- Totales con colores mejorados para UX -->
                            <td class="px-2 py-4 w-20 whitespace-nowrap text-sm text-right font-semibold bg-orange-50 text-orange-700">
                                S/ {{ formatearMoneda .SubTotal }}
                            </td>
                            <td class="px-2 py-4 w-20 whitespace-nowrap text-sm text-right font-semibold bg-orange-50 text-orange-700">
                                S/ {{ formatearMoneda .DeudaAnterior }}
                            </td>
                            <td class="px-2 py-4 w-20 whitespace-nowrap text-sm text-right font-semibold bg-red-100 text-red-700">
                                <a href="/editar-pagos?id_estudiante={{ .IdEstudiante }}&fecha={{ formatearFechaCompleta $.FechaInicio }}&grado={{ $.GradoSeleccionado }}"
                                   class="block hover:bg-red-200 rounded px-2 py-1 transition-colors">
                                    {{ if mayorQueCero .Descuento }}S/ {{ formatearMoneda .Descuento }}{{ else }}-{{ end }}
                                </a>
                            </td>
                            <td class="px-2 py-4 w-20 whitespace-nowrap text-sm text-right font-extrabold bg-amber-100 text-red-800">
                                S/ {{ formatearMoneda .Total }}
                            </td>
                        </tr>
                    {{ end }}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Checkboxes de días hábiles
        document.querySelectorAll('.dia-toggle').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const urlParams = new URLSearchParams(window.location.search);
                let diasOff = urlParams.get('dias_off') ? urlParams.get('dias_off').split(',') : [];
                const fecha = this.dataset.fecha;

                if (this.checked) {
                    diasOff = diasOff.filter(d => d !== fecha);
                } else {
                    if (!diasOff.includes(fecha)) {
                        diasOff.push(fecha);
                    }
                }

                const nuevoDiasOff = diasOff.filter(d => d).join(',');
                if (nuevoDiasOff) {
                    urlParams.set('dias_off', nuevoDiasOff);
                } else {
                    urlParams.delete('dias_off');
                }
                window.location.search = urlParams.toString();
            });
        });
    </script>
</body>
</html>